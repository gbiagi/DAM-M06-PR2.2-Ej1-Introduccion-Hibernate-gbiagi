<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.Ciutada" table="ciutadans">
        <id name="id" type="long" column="Id">
            <generator class="native" />
        </id>
        <property name="ciutatId" type="long" column="ciutatId"/>
        <property name="nom" type="string" column="nom"/>
        <property name="cognom" type="string" column="cognom"/>
        <property name="edat" type="int" column="edat"/>
    </class>
</hibernate-mapping>